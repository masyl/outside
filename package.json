{
  "name": "outside",
  "version": "0.1.0",
  "private": true,
  "description": "Outside game - monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "doc": "pnpm --filter @outside/design dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "sync:skills": "./scripts/sync-skills",
    "storybook": "pnpm --filter outside-storybook storybook",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "c8": "^10.1.3",
    "esbuild": "0.25.12",
    "jsdom": "^25.0.1",
    "mermaid": "^11.12.2",
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.12",
      "react": "18.3.1",
      "react-dom": "18.3.1"
    }
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
