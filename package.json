{
  "name": "outside",
  "version": "0.1.0",
  "private": true,
  "description": "Outside game - monorepo",
  "workspaces": [
    "outside-*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "c8": "^10.1.3",
    "jsdom": "^25.0.1",
    "mermaid": "^11.12.2",
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17",
    "esbuild": "^0.25.12"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.12"
    }
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
