{
  "$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    },
    {
      "name": "delivery",
      "pageBundle": true,
      "previewPath": null,
      "card": {
        "fields": {
          "title": "Title",
          "description": "Summary",
          "date": "DeliveryDate"
        }
      },
      "listView": {
        "columns": ["Title", "DeliveryDate", "Summary"]
      },
      "gridView": {
        "fields": ["Title", "DeliveryDate", "Summary"]
      },
      "fields": [
        {
          "title": "Title",
          "name": "Title",
          "type": "string",
          "isTitle": true
        },
        {
          "title": "Delivery Date",
          "name": "DeliveryDate",
          "type": "datetime",
          "isPublishDate": true
        },
        {
          "title": "Summary",
          "name": "Summary",
          "type": "string",
          "isDescription": true
        },
        {
          "title": "Status",
          "name": "Status",
          "type": "choice",
          "choices": [
            {
              "id": "TODO",
              "title": "TODO"
            },
            {
              "id": "DOING",
              "title": "DOING"
            },
            {
              "id": "DONE",
              "title": "DONE"
            }
          ]
        },
        {
          "title": "Branch",
          "name": "Branch",
          "type": "string"
        },
        {
          "title": "Commit",
          "name": "Commit",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "other",
  "frontMatter.content.publicFolder": "",
  "frontMatter.git.enabled": true,
  "frontMatter.content.pageFolders": [
    {
      "title": "design-process",
      "path": "[[workspace]]/outside-design/docs/design-process"
    },
    {
      "title": "pitches",
      "path": "[[workspace]]/outside-design/docs/pitches"
    },
    {
      "title": "deliveries",
      "path": "[[workspace]]/outside-design/docs/deliveries",
      "contentTypes": ["delivery"],
      "defaultContentType": "delivery"
    }
  ],
  "frontMatter.dashboard.openOnStart": false,
  "frontMatter.dashboard.content.card.fields": {
    "title": "Title",
    "description": "Summary",
    "date": "DeliveryDate"
  }
}